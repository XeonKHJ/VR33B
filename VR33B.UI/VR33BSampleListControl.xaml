<UserControl x:Class="VR33B.UI.VR33BSampleListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VR33B.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="UserControl_Loaded"
             Unloaded="UserControl_Unloaded">
    <StackPanel>

        <Expander Header="筛选">
            <StackPanel Orientation="Horizontal">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Label Content="Min Index" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="MinIndexFilterTextBox" Grid.Row="0" Grid.Column="1" Text="0" Margin="5" VerticalAlignment="Center"/>
                    <Label Content="Max Index" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="MaxIndexFilterTextBox" Grid.Row="1" Grid.Column="1" Text="100" Margin="5" VerticalAlignment="Center"/>
                    <CheckBox Content="异常点" Margin="10" Grid.Column="2"/>
                </Grid>
            </StackPanel>
        </Expander>
        <DataGrid x:Name="SampleDataGrid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="索引" Binding="{Binding Path=SampleIndex}" CanUserResize="True" CanUserSort="True"/>
                <DataGridTextColumn Header="采样时间" Binding="{Binding Path=SampleDateTime}" CanUserResize="True" CanUserSort="True"/>
                <DataGridTextColumn Header="加速度" Binding="{Binding Path=AccelerometerValue}" CanUserResize="True" CanUserSort="False"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
    
</UserControl>
