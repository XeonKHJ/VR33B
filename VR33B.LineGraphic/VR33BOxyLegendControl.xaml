<UserControl x:Class="VR33B.LineGraphic.VR33BOxyLegendControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VR33B.LineGraphic"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <StackPanel Orientation="Horizontal">
        <CheckBox x:Name="DisplayCheckBox" Content="Axis-X" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                <Button x:Name="LineColorPickerBtn"  Width="20" Height="20" Margin="10,1,10,1" Background="Red" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <Line Width="15" Height="15" X1="0" Y1="0" X2="15" Y2="15" Margin="10,1,10,1" Stroke="Red" StrokeThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Slider x:Name="LineStrokeSizeSlider" Width="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                <Button x:Name="MarkerColorPickerBtn" Width="20" Height="20" Margin="10,1,10,1" Background="Red" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <Ellipse Width="15" Height="15" Stroke="Red" Margin="10,1,10,1" StrokeThickness="5" Fill="Red"/>
                <Slider x:Name="MarkerSizeSlider" Width="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
        
    </StackPanel>
</UserControl>
